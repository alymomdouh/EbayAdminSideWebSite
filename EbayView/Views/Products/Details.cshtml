@model EbayView.Models.ViewModel.Products.GetProductDetailsOutputModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.brandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.brandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdminName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdminName)
        </dd> 
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.categoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.subcategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.subcategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stockName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stockName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.rateNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rateNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.commentNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.commentNumber)
        </dd>
    </dl>
    <div class="w-100 d-block text-center">
                <h1>Product Images</h1>
               <br />
        @foreach (var img in Model.productImgs)
        {
            <img src="@img">
        }
    </div>
</div>
<div style="display:block;width:100%;text-align:center">
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary" style="margin-right:10px">Edit</a>  
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
