@model Models.Product

@section styleslink  {   <link href="~/css/addProduct.css" rel="stylesheet"/> 
<style>
	
</style>

} 

<div class="w-100 text-center m-2">
	<h1 class="bg-dark">Create New Product Page</h1>
</div>
<hr />
<div class="w-75 mx-auto">
	<div class="col-md-12">
		<form asp-action="Create">
			@*<div class="col-md-2"></div>*@
			<div class="col-md-12">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="row form-group">
					<div class="col-6 bp-2">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="col-6 bp-2">
						<label asp-for="Price" class="control-label"></label>
						<input asp-for="Price" class="form-control" />
						<span asp-validation-for="Price" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-6 bp-2">
						<label asp-for="Quantity" class="control-label"></label>
						<input asp-for="Quantity" class="form-control" />
						<span asp-validation-for="Quantity" class="text-danger"></span>
					</div>
					<div class="col-6 bp-2">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-6 bp-2">
						<label asp-for="AdminId" class="control-label">Select Admin Name</label>
						<select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
					</div>
					<div class="col-6 bp-2">
						<label asp-for="CatId" class="control-label"></label>
						<select asp-for="CatId" class="form-control" asp-items="ViewBag.CatId"></select>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-6 bp-2">
						<label asp-for="BrandId" class="control-label">Select Brand Name </label>
						<select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
					</div>
					<div class="col-6 bp-2">
						<label asp-for="StockId" class="control-label">Select Stock Name</label>
						<select asp-for="StockId" class="form-control" asp-items="ViewBag.StockId"></select>
					</div>
				</div>

				<div class="row form-group">
					<label asp-for="SubCatId" class="control-label">Select SubCategory Name</label>
					<select asp-for="SubCatId" class="form-control" asp-items="ViewBag.SubCatId"></select>
				</div> 
			</div>
			@*<div class="col-md-2"></div>*@
			<div class="row">
				<div class="col-12">
					<div class="product-info">
						 <div class="product-image"><p class="text">product image</p></div> 
						<div class="upload-image-sec">
							<!-- upload inputs -->
							<p class="text"><img src="~/img/camera.png" alt="">upload image</p>
							<div class="upload-catalouge">
								<input type="file" class="fileupload" id="first-file-upload-btn" hidden accept=".png, .jpg">
								<label for="first-file-upload-btn" class="upload-image"></label>
								<input type="file" class="fileupload" id="second-file-upload-btn" hidden accept=".png, .jpg">
								<label for="second-file-upload-btn" class="upload-image"></label>
								<input type="file" class="fileupload" id="third-file-upload-btn" hidden accept=".png, .jpg">
								<label for="third-file-upload-btn" class="upload-image"></label>
								<input type="file" class="fileupload" id="fourth-file-upload-btn" hidden accept=".png, .jpg">
								<label for="fourth-file-upload-btn" class="upload-image"></label>
							</div>
						</div>
					</div>
			    </div>
			</div>
			<div class="row form-group text-center">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div class="w-100 text-center">
	<a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scriptslink  {   <script src="~/js/addProduct.js"></script>}

